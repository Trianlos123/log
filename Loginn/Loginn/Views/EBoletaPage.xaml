<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loginn.Views.EBoletaPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Boleta Electrónica">
    <ContentPage.Content>
            <StackLayout
                BindingContext="{Binding EBoleta}"
                Padding="10">
                <Button
                    BorderRadius="20"
                    Command="{Binding ScanCommand}"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                    Text="Abrir Scan"
                    VerticalOptions="Center">
                </Button>
                <Entry
                    Text="{Binding Code, Mode=TwoWay}">
                </Entry>
                <ListView
                    ItemsSource="{Binding EBoleta}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    Text="{Binding Nombre}">
                                </Label>
                                <Label
                                    Grid.Column="1"
                                    Text="Cantidad">
                                </Label>
                                <Label
                                    Grid.Column="2"
                                    Text="Precio">
                                </Label>
                            </Grid>
                            </ViewCell>
                            <!--<TextCell
                                Text="{Binding Nombre}"
                                Detail="Cantidad/Precio">
                            </TextCell>-->
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout
                    Orientation="Horizontal">
                    <Stepper
                        Value="{Binding Stepper, Mode=TwoWay}"
                        HorizontalOptions="StartAndExpand"
                        Minimum="1"
                        VerticalOptions="Center"
                        x:Name="Steper">
                    </Stepper>
                    <Label
                        HorizontalOptions="End"
                        Text="{Binding Source={x:Reference Steper},Path=Value}"
                        VerticalOptions="Center">
                    </Label>
                </StackLayout>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>