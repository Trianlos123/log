<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loginn.Views.EBoletaPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Boleta Electrónica">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding EBoleta}"
            Padding="10">
            <Button
                BorderRadius="20"
                Command="{Binding ScanCommand}"
                IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                Text="Abrir Scan"
                VerticalOptions="CenterAndExpand">
            </Button>
            <Entry
                Text="{Binding Code, Mode=TwoWay}">
            </Entry>
            <ListView
                ItemsSource="{Binding EBoleta}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Text="{Binding Nombre}"
                            Detail="Cantidad/Precio">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Stepper
                Value="{Binding Stepper, Mode=TwoWay}"
                Minimum="1"
                VerticalOptions="Center">
            </Stepper>
            <Label
                Text="{Binding ValorStepper, Mode=TwoWay}"
                VerticalOptions="Center">
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>