<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loginn.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}">
        <Grid>
            <!--<Image Source="micropos.jpg" Aspect="AspectFill"/>-->
            <BoxView Color="Blue" Opacity="0.7"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="micropos.png" Margin="0,50,0,30" HeightRequest="100" WidthRequest="100"/>

                <StackLayout 
                    Grid.Row="1" 
                    Padding="30,20">
                    <Entry 
                        Placeholder="Usuario" 
                        PlaceholderColor="White"
                        Text="{Binding User, Mode=TwoWay}"
                        TextColor="White"/>
                    <Entry Placeholder="Contraseña" 
                           PlaceholderColor="White" 
                           IsPassword="True" 
                           Text="{Binding Password, Mode=TwoWay}"
                           TextColor="White"/>
                    <ActivityIndicator
                        IsRunning="{Binding IsRunning, Mode=TwoWay}"
                        VerticalOptions="CenterAndExpand">
                    </ActivityIndicator>
                    <StackLayout 
                         Orientation="Horizontal"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            HorizontalOptions="StartAndExpand"
                            Text="Recordar"
                            VerticalOptions="Center">
                        </Label>
                        <Switch
                            IsToggled="{Binding IsRemember, Mode=TwoWay}"
                            HorizontalOptions="End">
                        </Switch>
                    </StackLayout>
                    <Button 
                        Command="{Binding LoginCommand}"
                        BackgroundColor="White" 
                        BorderRadius="20" 
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                        Text="Iniciar Sesión" 
                        TextColor="Blue"
                        VerticalOptions="CenterAndExpand"/>
                </StackLayout>
            </Grid>
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>